<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/vien"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMaPhieuPM"
            android:text="Mã phiếu: "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvthanhvienPM"
            android:textSize="18dp"
            android:text="Thành viên: "
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvtensachPM"
            android:textSize="18dp"
            android:text="Tên sách: "
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvtienthuePM"
            android:text="Tiền thuê: "
            android:textSize="18dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvtrasachPM"
            android:text="Chưa trả sách"
            android:layout_marginTop="80dp"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:textSize="16dp"
            android:layout_marginLeft="230dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvngayPM"
            android:text="Ngày thuê:7/10/2023"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="180dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/deletePhieuMuon"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:layout_marginLeft="350dp"
            android:src="@drawable/baseline_delete_24"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>

